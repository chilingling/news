<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>com.news.web.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.news.web.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>IndexNew</servlet-name>
        <servlet-class>com.news.web.servlet.IndexNews</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexNew</servlet-name>
        <url-pattern>/indexnew</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Classify</servlet-name>
        <servlet-class>com.news.web.servlet.ClassifyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Classify</servlet-name>
        <url-pattern>/classify</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>NewsDetail</servlet-name>
        <servlet-class>com.news.web.servlet.NewsDetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewsDetail</servlet-name>
        <url-pattern>/detail/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AddComment</servlet-name>
        <servlet-class>com.news.web.servlet.AddCommentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddComment</servlet-name>
        <url-pattern>/addcomment</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetComments</servlet-name>
        <servlet-class>com.news.web.servlet.getCommentsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetComments</servlet-name>
        <url-pattern>/comment</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LikesComment</servlet-name>
        <servlet-class>com.news.web.servlet.LikesCommentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LikesComment</servlet-name>
        <url-pattern>/likescomment</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetAllClassify</servlet-name>
        <servlet-class>com.news.web.servlet.GetAllClassifyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAllClassify</servlet-name>
        <url-pattern>/allclassify</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CancelLike</servlet-name>
        <servlet-class>com.news.web.servlet.CancelLikeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CancelLike</servlet-name>
        <url-pattern>/cancellike</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteComment</servlet-name>
        <servlet-class>com.news.web.servlet.DeleteCommentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteComment</servlet-name>
        <url-pattern>/deletecomment</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdatePasswd</servlet-name>
        <servlet-class>com.news.web.servlet.UpdatePasswdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdatePasswd</servlet-name>
        <url-pattern>/updatepasswd</url-pattern>
    </servlet-mapping>
    <!--网页端首页-->
    <servlet>
        <servlet-name>IndexNews</servlet-name>
        <servlet-class>com.news.web.servlet.jsp.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexNews</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ClassifyNews</servlet-name>
        <servlet-class>com.news.web.servlet.jsp.ClassifyNews</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClassifyNews</servlet-name>
        <url-pattern>/classifynews</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DetailNews</servlet-name>
        <servlet-class>com.news.web.servlet.jsp.DetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailNews</servlet-name>
        <url-pattern>/detailnews</url-pattern>
    </servlet-mapping>
</web-app>